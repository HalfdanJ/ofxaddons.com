<div class="repo_page span-20 push-2 last">
  <h2><%= @repo.name %> <% if @repo.category %><span class="repo_category"><a href="/#<%= @repo.category.slug %>"><%= @repo.category.name %></a></span><% end %> <span class="download"><a href="<%= @repo.github_url %>/zipball/master">â‡£</a></span></h2> 
  <h3>by <a href="http://github.com/<%= @repo.owner %>"><%= @repo.owner %></a> </h3>
  
  <p><a href="<%= @repo.github_url %>">view on Github</a></p>
  
  <p>
    <em><%= @repo.description %></em>
  </p>
  
  <div class="repo_details">
    <p>
      <b>Originally created:</b> <%= @repo.github_created_at.strftime("%e %B, %Y") %>
    </p>
    <p>
      <b>Last updated:</b> <%= @repo.last_pushed_at.strftime("%e %B, %Y") %>
    </p>
  </div>
  <br/>
  <% unless @repo.fresher_forks.empty? %>
    <h2>Fresher Forks</h2>
    <% for fork in @repo.fresher_forks %>
      <p>by <a href="http://github.com/<%= fork["owner"]["login"] %>"><%= fork["owner"]["login"] %></a></p>
 	  <p><a href="<%= fork["html_url"] %>">view on Github</a></p> 
      <p>last pushed: <%= DateTime.parse(fork["pushed_at"]).strftime("%e %B, %Y") %></p>
    <% end %>
  <%end %>

  <% unless @repo.readme.nil? %>  
    <h2>README</h2>
    <%= @repo.readme %>
  <%end %>
</div>
